generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  role          String // 'admin' or 'builder'
  walletAddress String?
  bio           String?
  location      String?
  twitter       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tasks        Task[]
  applications Application[]
  submissions  Submission[]
  payments     Payment[]
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String
  type           String // 'Workshop', 'Hackathon', 'Meetup', 'Part-time Job', 'Full-time Job', 'Hourly Job'
  location       String? // Only for Workshop, Hackathon, Meetup
  date           DateTime? // Only for Workshop, Hackathon, Meetup
  budget         Float
  streamDuration Int? // Duration in seconds
  streamId       String? // ID of the active stream on chain
  status         String    @default("Open") // 'Open', 'Closed', 'In Progress'
  createdById    String
  createdBy      User      @relation(fields: [createdById], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  kpis         KPI[]
  applications Application[]
  submissions  Submission[]

  @@index([status])
  @@index([type])
}

model KPI {
  id          String  @id @default(cuid())
  name        String
  target      String
  description String?
  taskId      String
  task        Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Application {
  id          String    @id @default(cuid())
  taskId      String
  task        Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  builderId   String
  builder     User      @relation(fields: [builderId], references: [id])
  coverLetter String
  status      String    @default("Pending") // 'Pending', 'Approved', 'Rejected'
  reviewNotes String?
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([taskId, builderId])
  @@index([status])
}

model Submission {
  id          String    @id @default(cuid())
  taskId      String
  task        Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  builderId   String
  builder     User      @relation(fields: [builderId], references: [id])
  workSummary String
  status      String    @default("Pending Review") // 'Pending Review', 'Approved', 'Rejected', 'Revision Requested'
  reviewNotes String?
  amount      Float?
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  kpiResults      KPIResult[]
  supportingFiles SupportingFile[]

  @@index([status])
}

model KPIResult {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  name         String
  target       String
  achieved     String
  status       String // 'Achieved', 'Not Achieved', 'Partially Achieved'

  @@index([submissionId])
}

model SupportingFile {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  name         String
  size         String
  type         String
  url          String

  @@index([submissionId])
}

model Payment {
  id        String   @id @default(cuid())
  streamId  String
  amount    Float
  token     String
  from      String
  to        String
  txHash    String?
  status    String   @default("Completed")
  createdAt DateTime @default(now())

  builderId String?
  builder   User?   @relation(fields: [builderId], references: [id])
}
